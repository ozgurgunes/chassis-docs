<style lang="scss">
  @import '../styles/main.scss';
  
  .footer {
    background-color: $cx-color-theme-background-secondary;
    border-top: 1px solid $cx-color-theme-border-primary;
    padding: $cx-spacing-base-2xlarge 0 $cx-spacing-base-large 0;
    margin-top: auto;
    
    &__content {
      display: grid;
      grid-template-columns: 1fr 2fr;
      gap: $cx-spacing-base-2xlarge;
      margin-bottom: $cx-spacing-base-xlarge;
      
      @media (max-width: 768px) {
        grid-template-columns: 1fr;
        gap: $cx-spacing-base-xlarge;
      }
    }
    
    &__brand {
      max-width: 300px;
      
      img {
        margin-bottom: $cx-spacing-base-medium;
      }
    }
    
    &__description {
      color: $cx-color-theme-text-secondary;
      margin-bottom: $cx-spacing-base-medium;
      line-height: $cx-line-height-base-relaxed;
    }
    
    &__social {
      display: flex;
      gap: $cx-spacing-base-small;
    }
    
    &__social-link {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 2.5rem;
      height: 2.5rem;
      background-color: $cx-color-theme-background-primary;
      border: 1px solid $cx-color-theme-border-primary;
      border-radius: $cx-border-radius-base-medium;
      color: $cx-color-theme-text-secondary;
      transition: all 0.2s ease;
      
      &:hover {
        color: $cx-color-theme-accent-primary;
        border-color: $cx-color-theme-accent-primary;
        text-decoration: none;
      }
      
      i {
        font-size: $cx-font-size-base-large;
      }
    }
    
    &__links {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: $cx-spacing-base-xlarge;
      
      @media (max-width: 640px) {
        grid-template-columns: 1fr;
        gap: $cx-spacing-base-large;
      }
    }
    
    &__section-title {
      font-size: $cx-font-size-base-medium;
      font-weight: $cx-font-weight-base-semibold;
      color: $cx-color-theme-text-primary;
      margin-bottom: $cx-spacing-base-medium;
    }
    
    &__section-links {
      list-style: none;
      margin: 0;
      padding: 0;
      
      li {
        margin-bottom: $cx-spacing-base-small;
        
        &:last-child {
          margin-bottom: 0;
        }
      }
      
      a {
        color: $cx-color-theme-text-secondary;
        font-size: $cx-font-size-base-small;
        transition: color 0.2s ease;
        
        &:hover {
          color: $cx-color-theme-accent-primary;
          text-decoration: none;
        }
      }
    }
    
    &__bottom {
      padding-top: $cx-spacing-base-large;
      border-top: 1px solid $cx-color-theme-border-primary;
    }
    
    &__bottom-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: $cx-spacing-base-medium;
      
      @media (max-width: 640px) {
        flex-direction: column;
        text-align: center;
      }
    }
    
    &__copyright {
      color: $cx-color-theme-text-secondary;
      font-size: $cx-font-size-base-small;
      margin: 0;
    }
    
    &__license-link {
      color: $cx-color-theme-accent-primary;
      
      &:hover {
        text-decoration: underline;
      }
    }
    
    &__tech {
      display: flex;
      align-items: center;
      gap: $cx-spacing-base-small;
      flex-wrap: wrap;
    }
    
    &__tech-label {
      color: $cx-color-theme-text-secondary;
      font-size: $cx-font-size-base-small;
    }
    
    &__tech-link {
      display: flex;
      align-items: center;
      gap: $cx-spacing-base-xsmall;
      color: $cx-color-theme-text-secondary;
      font-size: $cx-font-size-base-small;
      padding: $cx-spacing-base-xsmall $cx-spacing-base-small;
      border-radius: $cx-border-radius-base-small;
      transition: all 0.2s ease;
      
      &:hover {
        color: $cx-color-theme-accent-primary;
        background-color: $cx-color-theme-background-primary;
        text-decoration: none;
      }
      
      i {
        font-size: $cx-font-size-base-small;
      }
    }
  }
</style>
