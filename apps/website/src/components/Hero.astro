---
export interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  primaryCta?: {
    text: string;
    href: string;
  };
  secondaryCta?: {
    text: string;
    href: string;
  };
}

const codeExample = `/* Generated design tokens */
:root {
  --cx-color-accent-primary: #3b82f6;
  --cx-color-accent-secondary: #1d4ed8;
  --cx-spacing-base-small: 0.5rem;
  --cx-spacing-base-medium: 1rem;
  --cx-font-size-base-large: 1.125rem;
  --cx-border-radius-medium: 0.375rem;
}

/* Component styles using tokens */
.btn {
  padding: var(--cx-spacing-base-small) var(--cx-spacing-base-medium);
  font-size: var(--cx-font-size-base-large);
  border-radius: var(--cx-border-radius-medium);
  background: var(--cx-color-accent-primary);
}`;

const { 
  title = "Chassis Design System",
  subtitle = "Enterprise-grade, multi-brand, multi-platform design tokens",
  description = "A robust foundation for building consistent, scalable design systems across web, iOS, and Android platforms with support for multiple brands and themes.",
  primaryCta = { text: "Get Started", href: "/getting-started" },
  secondaryCta = { text: "View on GitHub", href: "https://github.com/ozgurgunes/chassis-tokens" }
} = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero__content">
      <div class="hero__text">
        <h1 class="hero__title">{title}</h1>
        <p class="hero__subtitle">{subtitle}</p>
        <p class="hero__description">{description}</p>
        
        <div class="hero__actions">
          <a href={primaryCta.href} class="btn btn--primary btn--large">
            <i class="icon-arrow-right-outline" aria-hidden="true"></i>
            {primaryCta.text}
          </a>
          <a href={secondaryCta.href} 
             class="btn btn--secondary btn--large"
             target="_blank"
             rel="noopener noreferrer">
            <i class="icon-github-outline" aria-hidden="true"></i>
            {secondaryCta.text}
          </a>
        </div>
      </div>
      
      <div class="hero__visual">
        <div class="hero__code-example">
          <div class="code-window">
            <div class="code-window__header">
              <div class="code-window__controls">
                <span class="code-window__control code-window__control--close"></span>
                <span class="code-window__control code-window__control--minimize"></span>
                <span class="code-window__control code-window__control--maximize"></span>
              </div>
              <div class="code-window__title">tokens.scss</div>
            </div>
            <div class="code-window__content">
              <pre><code>{codeExample}</code></pre>
            </div>
          </div>
        </div>
        
        <div class="hero__features">
          <div class="feature-grid">
            <div class="feature-item">
              <i class="icon-palette-outline feature-item__icon" aria-hidden="true"></i>
              <h3 class="feature-item__title">Multi-Brand</h3>
              <p class="feature-item__description">Support multiple brands with theme variations</p>
            </div>
            <div class="feature-item">
              <i class="icon-mobile-outline feature-item__icon" aria-hidden="true"></i>
              <h3 class="feature-item__title">Multi-Platform</h3>
              <p class="feature-item__description">Generate tokens for web, iOS, and Android</p>
            </div>
            <div class="feature-item">
              <i class="icon-sync-outline feature-item__icon" aria-hidden="true"></i>
              <h3 class="feature-item__title">Auto-Generated</h3>
              <p class="feature-item__description">Automated token generation from Figma</p>
            </div>
            <div class="feature-item">
              <i class="icon-cube-outline feature-item__icon" aria-hidden="true"></i>
              <h3 class="feature-item__title">Icon System</h3>
              <p class="feature-item__description">200+ icons with web font generation</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 4rem 0;
    background: linear-gradient(
      135deg,
      #ffffff 0%,
      rgba(59, 130, 246, 0.03) 100%
    );
  }
  
  .hero__content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  
  @media (max-width: 968px) {
    .hero__content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }
  }
  
  .hero__text {
    max-width: 600px;
  }
  
  @media (max-width: 968px) {
    .hero__text {
      max-width: none;
    }
  }
  
  .hero__title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1rem;
    background: linear-gradient(
      135deg,
      #1a1a1a 0%,
      #3b82f6 100%
    );
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .hero__subtitle {
    font-size: 1.25rem;
    font-weight: 500;
    color: #3b82f6;
    margin-bottom: 1rem;
  }
  .hero__description {
    font-size: 1.125rem;
    color: #666;
    margin-bottom: 3rem;
    line-height: 1.6;
  }
  
  .hero__actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  @media (max-width: 640px) {
    .hero__actions {
      flex-direction: column;
      align-items: stretch;
    }
  }
  
  .hero__visual {
    position: relative;
  }
  
  .hero__code-example {
    margin-bottom: 3rem;
  }
  
  .code-window {
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
  
  .code-window__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 1rem;
    background: #f3f4f6;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .code-window__controls {
    display: flex;
    gap: 0.25rem;
  }
  
  .code-window__control {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }
  
  .code-window__control--close { 
    background: #ff5f57; 
  }
  
  .code-window__control--minimize { 
    background: #ffbd2e; 
  }
  
  .code-window__control--maximize { 
    background: #28ca42; 
  }
  
  .code-window__title {
    font-size: 0.875rem;
    font-weight: 500;
    color: #666;
  }
  
  .code-window__content {
    padding: 1rem;
  }
  
  .code-window__content pre {
    margin: 0;
    background: none;
    border: none;
    font-size: 0.875rem;
    line-height: 1.6;
  }
  
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
  
  @media (max-width: 640px) {
    .feature-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .feature-item {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 0.375rem;
    padding: 1.5rem;
    text-align: center;
    transition: all 0.2s ease;
  }
  
  .feature-item:hover {
    border-color: #3b82f6;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transform: translateY(-2px);
  }
  
  .feature-item__icon {
    font-size: 2rem;
    color: #3b82f6;
    margin-bottom: 0.5rem;
  }
  
  .feature-item__title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }
  
  .feature-item__description {
    font-size: 0.875rem;
    color: #666;
    margin: 0;
  }
</style>
