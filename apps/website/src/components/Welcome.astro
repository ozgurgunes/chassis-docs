---
// Chassis CSS Component Showcase
// This component demonstrates various Chassis CSS components and patterns
---

<div class="container my-xlarge">
  <div class="row">
    <div class="col-12 text-center mb-xlarge">
      <h1 class="display-large fw-bold mb-medium">
        <i class="chassis-icon chassis-icon-layers me-medium"></i>
        Chassis CSS Component Showcase
      </h1>
      <p class="lead text-muted">
        Explore the power of context-driven design with Chassis CSS components
      </p>
    </div>
  </div>

  <!-- Context Showcase -->
  <div class="row mb-xlarge">
    <div class="col-12">
      <h2 class="h3 mb-large">Context System in Action</h2>
      <div class="row g-medium">
        <div class="col-medium-6 col-large-4">
          <div class="card context primary">
            <div class="card-body text-center">
              <h5 class="card-title">Primary Context</h5>
              <p class="card-text">Brand identity and primary actions</p>
              <button class="button">Primary Button</button>
            </div>
          </div>
        </div>
        <div class="col-medium-6 col-large-4">
          <div class="card context success">
            <div class="card-body text-center">
              <h5 class="card-title">Success Context</h5>
              <p class="card-text">Positive feedback and confirmations</p>
              <button class="button">Success Button</button>
            </div>
          </div>
        </div>
        <div class="col-medium-6 col-large-4">
          <div class="card context warning">
            <div class="card-body text-center">
              <h5 class="card-title">Warning Context</h5>
              <p class="card-text">Caution and attention needed</p>
              <button class="button">Warning Button</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Button Variations -->
  <div class="row mb-xlarge">
    <div class="col-12">
      <h2 class="h3 mb-large">Button Variations</h2>
      <div class="d-flex flex-wrap gap-medium mb-medium">
        <button class="button primary">Solid Primary</button>
        <button class="button outline primary">Outline Primary</button>
        <button class="button smooth primary">Smooth Primary</button>
        <button class="button primary large">Large Primary</button>
        <button class="button primary small">Small Primary</button>
      </div>
      <div class="d-flex flex-wrap gap-medium">
        <button class="button secondary">Secondary</button>
        <button class="button success">Success</button>
        <button class="button warning">Warning</button>
        <button class="button danger">Danger</button>
        <button class="button info">Info</button>
      </div>
    </div>
  </div>

  <!-- Notifications -->
  <div class="row mb-xlarge">
    <div class="col-12">
      <h2 class="h3 mb-large">Notifications</h2>
      <div class="row g-medium">
        <div class="col-medium-6">
          <div class="notification success">
            <div class="notification-title">Success!</div>
            Your changes have been saved successfully. The new configuration is now active.
          </div>
        </div>
        <div class="col-medium-6">
          <div class="notification warning">
            <div class="notification-title">Warning</div>
            Please review your settings before proceeding. Some changes may affect existing data.
          </div>
        </div>
        <div class="col-medium-6">
          <div class="notification danger">
            <div class="notification-title">Error</div>
            Unable to save changes. Please check your connection and try again.
          </div>
        </div>
        <div class="col-medium-6">
          <div class="notification info">
            <div class="notification-title">Information</div>
            New features are now available. Check out the latest updates in your dashboard.
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Badges and Tags -->
  <div class="row mb-xlarge">
    <div class="col-12">
      <h2 class="h3 mb-large">Badges and Tags</h2>
      <div class="d-flex flex-wrap gap-small mb-medium">
        <span class="badge primary">Primary</span>
        <span class="badge secondary">Secondary</span>
        <span class="badge success">Success</span>
        <span class="badge warning">Warning</span>
        <span class="badge danger">Danger</span>
        <span class="badge info">Info</span>
        <span class="badge neutral">Neutral</span>
      </div>
      <div class="d-flex flex-wrap gap-small">
        <span class="badge outline primary">Outline Primary</span>
        <span class="badge outline success">Outline Success</span>
        <span class="badge small primary">Small</span>
        <span class="badge small outline secondary">Small Outline</span>
      </div>
    </div>
  </div>

  <!-- Getting Started -->
  <div class="row">
    <div class="col-12">
      <div class="card context info">
        <div class="card-header">
          <h3 class="card-title mb-0">
            <i class="chassis-icon chassis-icon-lightbulb me-small"></i>
            Ready to Get Started?
          </h3>
        </div>
        <div class="card-body">
          <p class="card-text">
            Chassis CSS provides a comprehensive component library built on design tokens. 
            Every component automatically adapts to your brand colors and maintains perfect 
            accessibility across light and dark themes.
          </p>
          <div class="d-flex gap-medium mt-large">
            <a href="/docs/getting-started" class="button primary">
              <i class="chassis-icon chassis-icon-book me-small"></i>
              Read Documentation
            </a>
            <a href="https://github.com/ozgurgunes/chassis-css" class="button outline">
              <i class="chassis-icon chassis-icon-brand-github me-small"></i>
              View on GitHub
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Component-specific styles */
  .chassis-icon {
    font-style: normal;
    
    &.chassis-icon-layers::before { content: "üìã"; }
    &.chassis-icon-lightbulb::before { content: "üí°"; }
    &.chassis-icon-book::before { content: "üìö"; }
    &.chassis-icon-brand-github::before { content: "üêô"; }
  }

  /* Enhanced card hover effects */
  .card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    
    &:hover {
      transform: translateY(-2px);
      box-shadow: var(--cx-box-shadow, 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15));
    }
  }

  /* Notification animations */
  .notification {
    animation: fadeInUp 0.6s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Button hover enhancements */
  .button {
    transition: all 0.2s ease;
    
    &:hover {
      transform: translateY(-1px);
    }
  }

  /* Badge spacing */
  .badge {
    font-weight: 500;
  }
</style>
