---
export interface Props {
  variant?: 'default' | 'transparent';
}

const { variant = 'default' } = Astro.props;
---

<header class={`header header--${variant}`}>
  <div class="container">
    <div class="header__content">
      <div class="header__brand">
        <a href="/" class="header__logo">
          <img src="/images/chassis-logo-default.svg" alt="Chassis Design System" width="140" height="32" />
        </a>
      </div>
      
      <nav class="header__nav" aria-label="Main navigation">
        <ul class="nav-list">
          <li><a href="/getting-started" class="nav-link">Getting Started</a></li>
          <li><a href="/tokens" class="nav-link">Design Tokens</a></li>
          <li><a href="/components" class="nav-link">Components</a></li>
          <li><a href="/icons" class="nav-link">Icons</a></li>
          <li><a href="/examples" class="nav-link">Examples</a></li>
        </ul>
      </nav>
      
      <div class="header__actions">
        <a href="https://github.com/ozgurgunes/chassis-tokens" 
           class="btn btn--secondary btn--small" 
           target="_blank" 
           rel="noopener noreferrer">
          <i class="icon-github-outline" aria-hidden="true"></i>
          GitHub
        </a>
        
        <button type="button" 
                class="theme-toggle" 
                aria-label="Toggle dark mode"
                data-theme-toggle>
          <i class="icon-sun-outline theme-toggle__light" aria-hidden="true"></i>
          <i class="icon-moon-outline theme-toggle__dark" aria-hidden="true"></i>
        </button>
      </div>
      
      <button type="button" 
              class="header__mobile-toggle" 
              aria-label="Toggle navigation menu"
              data-mobile-toggle>
        <i class="icon-bars-outline" aria-hidden="true"></i>
      </button>
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: #ffffff;
    border-bottom: 1px solid #e5e7eb;
    backdrop-filter: blur(8px);
  }
  
  .header--transparent {
    background-color: rgba(255, 255, 255, 0.9);
  }
  
  .header__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 4rem;
    gap: 1.5rem;
  }
  
  .header__brand {
    flex-shrink: 0;
  }
  
  .header__logo {
    display: block;
  }
  
  .header__logo img {
    display: block;
    width: auto;
    height: 2rem;
  }
  
  .header__nav {
    flex: 1;
  }
  
  @media (max-width: 768px) {
    .header__nav {
      display: none;
    }
  }
  
  .header__actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  @media (max-width: 640px) {
    .header__actions .btn {
      display: none;
    }
  }
  
  .header__mobile-toggle {
    display: none;
    background: none;
    border: none;
    color: #1a1a1a;
    font-size: 1.25rem;
    cursor: pointer;
    padding: 0.25rem;
  }
  
  @media (max-width: 768px) {
    .header__mobile-toggle {
      display: block;
    }
  }
  
  .nav-list {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
    list-style: none;
  }
  
  .nav-link {
    color: #666;
    font-weight: 500;
    transition: color 0.2s ease;
  }
  
  .nav-link:hover {
    color: #1a1a1a;
    text-decoration: none;
  }
  
  .nav-link[aria-current="page"] {
    color: #3b82f6;
  }
  
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: none;
    border: 1px solid #e5e7eb;
    border-radius: 0.375rem;
    color: #666;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
  }
  
  .theme-toggle:hover {
    color: #1a1a1a;
    border-color: #d1d5db;
  }
  
  .theme-toggle:focus {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
  
  .theme-toggle__light,
  .theme-toggle__dark {
    position: absolute;
    font-size: 1rem;
    transition: opacity 0.2s ease;
  }
  
  .theme-toggle__dark {
    opacity: 0;
  }
  
  @media (prefers-color-scheme: dark) {
    .header {
      background-color: #1f2937;
      border-bottom-color: #374151;
    }
    
    .header--transparent {
      background-color: rgba(31, 41, 55, 0.9);
    }
    
    .header__mobile-toggle {
      color: #f3f4f6;
    }
    
    .nav-link {
      color: #d1d5db;
    }
    
    .nav-link:hover {
      color: #f3f4f6;
    }
    
    .theme-toggle {
      border-color: #374151;
      color: #d1d5db;
    }
    
    .theme-toggle:hover {
      color: #f3f4f6;
      border-color: #4b5563;
    }
    
    .theme-toggle__light {
      opacity: 0;
    }
    
    .theme-toggle__dark {
      opacity: 1;
    }
  }
</style>

<script>
  // Theme toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const themeToggle = document.querySelector('[data-theme-toggle]');
    const mobileToggle = document.querySelector('[data-mobile-toggle]');
    
    if (themeToggle) {
      themeToggle.addEventListener('click', () => {
        // Theme toggle logic will be implemented later
        console.log('Theme toggle clicked');
      });
    }
    
    if (mobileToggle) {
      mobileToggle.addEventListener('click', () => {
        // Mobile navigation toggle logic will be implemented later
        console.log('Mobile toggle clicked');
      });
    }
  });
</script>
