---
export interface Props {
	title?: string;
	description?: string;
}

const { title = "Chassis Design System", description = "Enterprise-grade, multi-brand, multi-app, and multi-platform design system documentation" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/images/chassis-icon-default.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		
		<!-- Preload critical fonts -->
		<link rel="preload" href="/chassis-icons.woff2" as="font" type="font/woff2" crossorigin />
		
		<!-- Chassis CSS Framework -->
		<link rel="stylesheet" href="/fonts.css" />
		
		<!-- Chassis Icons -->
		<link rel="stylesheet" href="/chassis-icons.css" />
	</head>
	<body>
		<slot />
	</body>
</html>

<style lang="scss" is:global>
	@import '../styles/main.scss';
</style>
