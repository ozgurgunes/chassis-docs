{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "paths": {
      "@css/*": ["../node_modules/@ozgurgunes/chassis-css/dist/*"],
      "@icons/*": ["../node_modules/@ozgurgunes/chassis-icons/dist/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@libs/*": ["src/libs/*"],
      "@shortcodes/*": ["src/components/shortcodes/*"]
    }
  }
}
