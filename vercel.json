{
  "version": 2,
  "buildCommand": "pnpm build",
  "outputDirectory": "_site",
  "rewrites": [
    {
      "source": "/docs/assets/(.*)",
      "destination": "https://chassis-assets.vercel.app/$1"
    },
    {
      "source": "/docs/css/(.*)",
      "destination": "https://chassis-css.vercel.app/$1"
    },
    {
      "source": "/docs/tokens/(.*)",
      "destination": "https://chassis-tokens.vercel.app/$1"
    },
    {
      "source": "/docs/figma/(.*)",
      "destination": "https://chassis-figma.vercel.app/$1"
    },
    {
      "source": "/docs/icons/(.*)",
      "destination": "https://chassis-icons.vercel.app/$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
