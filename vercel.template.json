{
  "version": 2,
  "buildCommand": "node scripts/generate-vercel-config.js && pnpm build",
  "outputDirectory": "_site",
  "rewrites": [
    {
      "source": "/docs/assets/(.*)",
      "destination": "{{ASSETS_URL}}/$1"
    },
    {
      "source": "/docs/css/(.*)",
      "destination": "{{CSS_URL}}/$1"
    },
    {
      "source": "/docs/tokens/(.*)",
      "destination": "{{TOKENS_URL}}/$1"
    },
    {
      "source": "/docs/figma/(.*)",
      "destination": "{{FIGMA_URL}}/$1"
    },
    {
      "source": "/docs/icons",
      "destination": "{{ICONS_URL}}/"
    },
    {
      "source": "/docs/icons/(.*)",
      "destination": "{{ICONS_URL}}/$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
